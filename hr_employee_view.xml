<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_employee_form_horn" model="ir.ui.view">
			<field name="name">hr.employee.form.horn</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr.view_employee_form" />
			<field name="arch" type="xml">
				<data>
					<xpath expr="//group[@string='Position']" position="after">
						<group string="Horn Field">
							<group>
								<field name="horn_gender" />
								<field name="birthdate" />
								<field name="nation" />
								<field name="work_age" />
								<field name="age" />
								<field name="work_number" />
								<field name="employee_status"/>
								<field name="entry_date" />
								<field name="internal_number" />
								<field name="graduation_date" />
								<field name="degree" />
								<field name="graduated_school" />
								<field name="major" />
								<field name="marital_status" />
							</group>
							<group>
								<field name="id_number" />
								<field name="id_address" />
								<field name="id_ending_date" />
								<field name="hometown" />
								<field name="leave_date" />
								<field name="promotion_date" />
								<field name="leave_reason" />
								<field name="leave_type" />
								<field name="import_number" />
								<field name="political_status" />
								<field name="emergency_contact" />
								<field name="contact_number" />
								<field name="star_evaluation" />
							</group>
						</group>
					</xpath>
					<xpath expr="//page[@string='Personal Information']" position="attributes">
						<attribute name="invisible">True</attribute>
					</xpath>
					<xpath expr="//page[@string='HR Settings']" position="attributes">
						<attribute name="invisible">True</attribute>
					</xpath>
				</data>
			</field>
		</record>
	</data>
</openerp>